@model WebApplication7.Models.Order
@{
    ViewBag.Title = "Добавление заказа";
}

<form asp-action="create" asp-controller="account">
    <div class="form-group">
        <label asp-for="Login" class="control-label"><b>Имя</b></label>
        <input type="text" asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"><b>Адрес</b></label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ContactPhone" class="control-label"><b>Контактный телефон</b></label>
        <input type="text" asp-for="ContactPhone" class="form-control" />
    </div>
    <center>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </center>
</form>